{
  "name": "gyratififel-server",
  "version": "0.1.0",
  "description": "Gyratififel",
  "repository": "git@github.com:MaxRozh/gyratifel-server.git",
  "author": "Maxim Rozhaev",
  "license": "MIT",
  "private": true,
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,libs}/**/*.ts' --fix --quiet --cache --color",
    "check-types": "tsc --pretty --noemit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "echo 'No e2e tests implemented yet.'",
    "test:related": "jest -o --passWithNoTests",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.8",
    "@nestjs/core": "^8.0.8",
    "@nestjs/graphql": "^9.0.5",
    "@nestjs/platform-express": "^8.0.8",
    "apollo-server": "^3.3.0",
    "apollo-server-express": "^3.3.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "graphql": "^15.6.0",
    "graphql-query-complexity": "^0.9.0",
    "graphql-subscriptions": "^1.2.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.3.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.2",
    "@nestjs/schematics": "^8.0.3",
    "@nestjs/testing": "^8.0.8",
    "@types/express": "^4.17.13",
    "@types/node": "^16.10.2",
    "@types/supertest": "^2.0.11",
    "jest": "^27.2.4",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "pre-commit": "^1.2.2",
    "prompts": "^2.4.1",
    "typescript": "^4.4.3"
  },
  "engines": {
    "node": ">=12.22.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn format",
      "yarn lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test:related"
    }
  }
}
